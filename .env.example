# Claude API Key (Required)
# Get your API key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=your_claude_api_key_here

# Claude Model (Optional - defaults to claude-sonnet-4-20250514)
CLAUDE_MODEL=claude-sonnet-4-20250514

# Vector DB Settings (Optional)
CHROMA_PERSIST_DIRECTORY=./chroma_db
COLLECTION_NAME=gcp_documents

# PDF Settings (Optional)
PDF_PATH=./Google Cloud Platform (GCP).pdf
CHUNK_SIZE=1000
CHUNK_OVERLAP=200

# App Settings (Optional)
APP_TITLE=GCP Knowledge Assistant
MAX_CONTEXT_CHUNKS=5

# Server Port (Used by Cloud Run)
PORT=8080
